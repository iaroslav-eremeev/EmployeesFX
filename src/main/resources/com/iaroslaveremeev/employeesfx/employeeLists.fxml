<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="500.0" maxWidth="500.0" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iaroslaveremeev.employeesfx.EmployeeListsController">
    <MenuBar prefHeight="26.0" prefWidth="376.0">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#buttonFileOpen" text="Open">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#buttonSaveFile" text="Save">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <ComboBox fx:id="employeesRepoComboBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="400.0">
        <VBox.margin>
            <Insets />
        </VBox.margin></ComboBox>
    <Button fx:id="buttonEmployeeChosen" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onButtonEmployeeChosenClick" prefHeight="25.0" prefWidth="148.0" text="Choose this employee!" textAlignment="CENTER">
        <VBox.margin>
            <Insets />
        </VBox.margin></Button>
    <Label alignment="CENTER" prefHeight="20.0" prefWidth="324.0" text="Lists of the employees you chose by their job:" textAlignment="CENTER">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </Label>
   <Separator prefWidth="200.0" />
   <Label text="Developers">
      <font>
         <Font size="14.0" />
      </font>
   </Label>
   <HBox alignment="CENTER">
      <children>
         <Button fx:id="showAllDevelopers" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showAll" text="Show all developers">
            <HBox.margin>
               <Insets left="25.0" right="25.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="deleteAllDevelopers" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#deleteAll" text="Delete all developers">
            <HBox.margin>
               <Insets left="25.0" right="25.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <ListView fx:id="chosenDevsList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin>
   </ListView>
   <Separator prefWidth="200.0" />
   <Label text="Designers">
      <font>
         <Font size="14.0" />
      </font></Label>
   <ListView fx:id="chosenDesignersList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin></ListView>
   <Label text="Testers">
      <font>
         <Font size="14.0" />
      </font></Label>
   <ListView fx:id="chosenTestersList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin></ListView>
   <Label text="Managers" />
   <ListView fx:id="chosenManagersList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin></ListView>

    <Label fx:id="welcomeText" />
</VBox>
